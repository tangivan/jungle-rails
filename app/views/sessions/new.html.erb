<div class="auth-form">
<%= form_tag '/login' do %>
  <h2 class="text-center">Log In</h2>
  <div class="form-group">
    <%= text_field_tag :email, "", class: "form-control", :placeholder => "Email" %>
  </div>
  <div class="form-group">
    <%= password_field_tag :password, "", class: "form-control", :placeholder => "Password" %>
  </div>
  <div class ="form-group">
    <%= submit_tag "Log In" , class: "btn btn-primary btn-block" %>
  </div>  
  <div class="clearfix">
  <span class="float-right">Don't have an account? Sign up <%= link_to 'here!', '/signup', :class => "link" %></li></span>
  </div>
<% end %>
</div>