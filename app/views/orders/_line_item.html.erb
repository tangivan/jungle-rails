<tr>
  <td>
    <%= image_tag product.image.tiny %>
  </td>
  <td>
    <h4><%= product.name %></h4>
    <br>
    <p><%= product.description %></p>
  </td>
  <td>
    $<%= number_with_precision(product.price, :precision => 2, :delimiter => ',') %>
  </td>
  <td>
    <%= quantity %>
  </td>
  <td>
    $<%= number_with_precision(product.price * quantity, :precision => 2, :delimiter => ',') %>
  </td>
</tr>
